<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible"

    >


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal"
        android:padding="@dimen/dp10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:onClick="back" />


        <ImageView
            android:id="@+id/imageview_search"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_toRightOf="@+id/imageview_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_settings"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_marginRight="@dimen/dp20"
                android:onClick="cromecast"

                android:src="@drawable/ic_cast"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_chrome"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/dp20"
                android:src="@drawable/image_notification"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageview_slider"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentLeft="true"
                android:src="@drawable/menu"
                android:visibility="gone" />


        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp160"
                    android:layout_gravity="right"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"

                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp140"
                    android:layout_height="@dimen/dp240"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp80"
                    app:cardCornerRadius="@dimen/dp3"
                    app:cardElevation="@dimen/dp6">

                    <ImageView
                        android:id="@+id/circular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:orientation="vertical"
                    android:padding="@dimen/dp20">

                    <ImageView
                        android:id="@+id/book_share"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:onClick="bookshare"
                        android:src="@drawable/share"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/book_fav"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginTop="@dimen/dp20"
                        android:onClick="bookfav"
                        tools:src="@drawable/heartblank" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp10">

                <LinearLayout
                    android:id="@+id/book_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="bookLayout"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/playfairdisplaybold"
                        android:gravity="center"
                        android:textColor="@color/textColblack"
                        android:textSize="@dimen/dp20"
                        tools:text="Artist Arictecgjjcbsbb bjcsbmbjbsfdfd " />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_subname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp4"
                    android:fontFamily="@font/playfairdisplaybold"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#828282"
                    android:textSize="@dimen/dp16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp120"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_marginRight="@dimen/dp120"
                    android:alpha="0.7"
                    android:background="@color/textColblack" />

                <TextView
                    android:id="@+id/text_authname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp4"
                    android:fontFamily="@font/playfairdisplayregular"
                    android:gravity="center"
                    android:onClick="textauthornameclick"
                    android:text=""
                    android:textColor="#828282"
                    android:textSize="@dimen/dp16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center"
                    android:onClick="bookLayout"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:background="@drawable/curve_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_read"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.96"
                            android:fontFamily="@font/playfairdisplayregular"
                            android:gravity="center"
                            android:onClick="read"
                            android:text="READ"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp14" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp30"
                            android:layout_marginTop="@dimen/dp3"
                            android:layout_marginBottom="@dimen/dp3"
                            android:layout_weight="0.01"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/text_subscribe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.96"
                            android:fontFamily="@font/playfairdisplayregular"
                            android:gravity="center"
                            android:text="SUBSCRIBE"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp14" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_startonline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp4"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@drawable/mybutton"
                        android:fontFamily="@font/proximanovabold"
                        android:padding="@dimen/dp10"
                        android:text="START ONLINE"
                        android:textColor="@color/textColblack"
                        android:textSize="@dimen/dp14" />

                    <TextView
                        android:id="@+id/txt_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp4"
                        android:background="@drawable/mybutton"
                        android:fontFamily="@font/proximanovabold"
                        android:padding="@dimen/dp10"
                        android:text="DOWNLOAD"
                        android:textColor="@color/textColblack"
                        android:textSize="@dimen/dp14" />

                </LinearLayout>

                <WebView
                    android:id="@+id/text_subdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:adjustViewBounds="true"
                    android:fontFamily="@font/proximanovareg"
                    android:scrollbars="none"
                    android:textColor="@color/textColblack"
                    android:textSize="@dimen/dp20"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp4"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/text_authortitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovabold"
                        android:text="About Author"
                        android:textColor="@color/textColblack"
                        android:textSize="@dimen/dp30"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp10"
                        android:visibility="gone"
                        android:weightSum="2">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_author"
                            android:layout_width="@dimen/dp120"
                            android:layout_height="@dimen/dp120" />

                        <at.blogc.android.views.ExpandableTextView
                            android:id="@+id/text_author"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginTop="@dimen/dime10"
                            android:ellipsize="end"
                            android:fontFamily="@font/proximanovareg"
                            android:maxLines="4"
                            android:scrollbars="none"
                            android:textColor="@color/textColblack"
                            android:textSize="@dimen/dp20" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20"
                                android:fontFamily="@font/proximanovabold"
                                android:text="Feature and details"
                                android:textColor="@color/textColblack"
                                android:textSize="@dimen/dp30" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dime10"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovabold"
                                    android:text="Publication Date : "
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                                <TextView
                                    android:id="@+id/text_pubdate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovareg"
                                    android:text=": 20 Nov 2017"
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovabold"
                                    android:text="Publisher : "
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                                <TextView
                                    android:id="@+id/text_pubname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovareg"
                                    android:text=": Aplis Publishing House"

                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovabold"
                                    android:text="Language : "
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                                <TextView
                                    android:id="@+id/text_publang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovareg"
                                    android:text=": English"
                                    android:textColor="@color/textColblack"

                                    android:textSize="@dimen/dime20" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovabold"
                                    android:text="Categories : "
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                                <TextView
                                    android:id="@+id/text_categories"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovareg"
                                    android:text="Primary Education"
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovabold"
                                    android:text="Age Ranges : "
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                                <TextView
                                    android:id="@+id/text_agerange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovareg"
                                    android:text="18-19"
                                    android:textColor="@color/textColblack"

                                    android:textSize="@dimen/dime20" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp20"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovabold"
                                    android:text="ISBN CODE : "
                                    android:textColor="@color/textColblack"
                                    android:textSize="@dimen/dime20" />

                                <TextView
                                    android:id="@+id/text_pubisbn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proximanovareg"
                                    android:text=":A1354 "
                                    android:textColor="@color/textColblack"

                                    android:textSize="@dimen/dime20" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_report"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/dime10"
                                android:fontFamily="@font/proximanovareg"
                                android:text="Report a Concern"
                                android:textColor="@color/textColblack"
                                android:textSize="@dimen/dp15" />


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:fontFamily="@font/proximanovabold"
                        android:text="Tags:"
                        android:textColor="@color/textColblack"
                        android:textSize="@dimen/dp30"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTags"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp10"
                    android:visibility="gone">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:orientation="vertical">


                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="0.8"
                            android:gravity="right"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/lineartopthreed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp45"
                                    android:layout_height="@dimen/dp45"
                                    android:layout_gravity="center"
                                    android:src="@drawable/threed"
                                    android:visibility="gone" />


                                <ImageView
                                    android:layout_width="@dimen/dp45"
                                    android:layout_height="@dimen/dp45"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp20"
                                    android:src="@drawable/ar"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/linear_left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp40"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/linear_notes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp60"
                                    android:layout_height="@dimen/dp60"
                                    android:layout_gravity="center"
                                    android:src="@drawable/notes" />

                                <TextView
                                    android:id="@+id/txt_notes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp10"
                                    android:gravity="left"
                                    android:text="Notes" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/linearstart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp50"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp60"
                                    android:layout_height="@dimen/dp60"
                                    android:layout_gravity="center"
                                    android:src="@drawable/play" />

                                <TextView
                                    android:id="@+id/txt_start"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp10"
                                    android:gravity="left"
                                    android:text="Start" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearresume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp50"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dp60"
                                    android:layout_height="@dimen/dp60"
                                    android:layout_gravity="center"
                                    android:src="@drawable/resume" />

                                <TextView
                                    android:id="@+id/txt_resume"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dp10"
                                    android:gravity="left"
                                    android:text="Resume" />

                            </LinearLayout>


                            <ProgressBar
                                android:id="@+id/progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:progress="50"
                                android:src="@android:drawable/stat_sys_download"
                                android:visibility="gone" />

                        </LinearLayout>

                    </RelativeLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/design_bottom_sheet"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:background="@color/white"
                        android:padding="@dimen/dp8"
                        android:visibility="gone"
                        app:cardElevation="@dimen/dp1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/home"
                                android:layout_width="@dimen/dp80"
                                android:layout_height="@dimen/dp80"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:src="@drawable/ic_cast"
                                android:text="All Tracks"
                                android:textColor="@android:color/white" />

                            <ImageView
                                android:id="@+id/fav"
                                android:layout_width="@dimen/dp80"
                                android:layout_height="@dimen/dp80"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp40"
                                android:layout_marginRight="@dimen/dp40"
                                android:gravity="center"
                                android:paddingLeft="@dimen/dp10"
